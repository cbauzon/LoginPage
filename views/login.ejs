<%- include("partials/header") -%>
    <div class="alertPlaceHolder"></div>

    <div class="login-box">
        <div class="title">
            <h1>Untitled</h1>
        </div>

        <div class="form">
            <form action="/" method="post">
                <h1>Sign in to Untitled</h1>

                <button class="btn btn-light" type="button">
                    <i class="fa-brands fa-google fa-lg"></i>
                    Sign in with Google
                </button>
                <button class="btn btn-light" type="button">
                    <i class="fa-brands fa-apple fa-xl"></i>
                    Sign in with Apple
                </button>

                <div class="divider">
                    <hr>
                    <span class="or-text">or</span>
                    <hr>
                </div>

                <div class="form-floating"> 
                    <input id="email" type="email" class="form-control" placeholder="Email address" name="email" required autocomplete="off">
                    <label for="email">Email address</label>
                </div>

                <div class="form-floating">
                    <input id="password" type="password" class="form-control" placeholder="Password" name="password" required>
                    <label for="password">Password</label>
                </div>

                <button class="btn btn-light" type="submit" name="log-in">Log In</button>
            </form>
        </div>
        
