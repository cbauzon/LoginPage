<div class="page">
    <div class="login-box">
        <div class="title">
            <h1>Untitled</h1>
        </div>

        <div class="form">
            <form action="/" method="post">
                <h1>Sign in to Untitled</h1>

                <button class="btn btn-light">
                    <i class="fa-brands fa-google fa-lg"></i>
                    Sign in with Google
                </button>
                <button class="btn btn-light">
                    <i class="fa-brands fa-apple fa-xl"></i>
